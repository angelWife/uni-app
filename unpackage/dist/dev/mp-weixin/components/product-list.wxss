.content {
  border: 0;
}
.item {
  padding: 20rpx 20rpx 0;
}
.pic {
  width: 200rpx;
  height: 200rpx;
  overflow: hidden;
  border-radius: 0.3em !important;
  position: relative;
}
.pic .shownum {
  position: absolute;
  background: #f6f6f6;
  text-align: center;
  height: 40rpx;
  width: 40rpx;
  line-height: 40rpx;
  border-radius: 40rpx;
  color: #999;
  left: 10rpx;
  top: 10rpx;
}
.nums {
  padding: 10rpx 0;
}
.msg {
  width: 50%;
  margin-left: 20rpx;
}


.item {
  background: #fff;
  margin: 0 24rpx 20rpx;
  border-radius: 0.4em;
}
.item .item_head {
  padding: 10rpx 20rpx;
}
.item .item_head .pic {
  width: 60rpx;
  height: 60rpx;
  border-radius: 60rpx;
  overflow: hidden;
  margin-right: 20rpx;
}
.item .item_head .name {
  width: 50%;
}
.item .item_head .status text {
  display: inline-block;
}
.item .item_body {
  padding: 10rpx 20rpx 0;
}
.item .item_body .pic {
  width: 160rpx;
  height: 160rpx;
  overflow: hidden;
  margin-right: 20rpx;
}
.item .item_body .spec text {
  display: inline-block;
  font-size: 24rpx;
  padding: 0 10rpx;
  background: #f8f8f8;
  color: #999;
  margin: 10rpx 10rpx 0 0;
}
.item .payprice {
  padding: 0 20rpx;
  line-height: 60rpx;
}
.item .orderBtn {
  padding: 20rpx;
}
.item .orderBtn button {
  display: inline-block;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  border-radius: 80rpx;
  margin-left: 20rpx;
}
.mr20 {
  margin-right: 20rpx;
}


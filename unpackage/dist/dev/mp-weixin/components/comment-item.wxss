.listItem {
  padding: 20rpx 0;
  border-bottom: 1px solid #efefef;
}
.listItem .item-head {
  padding: 0 30rpx;
}
.listItem .item-head .img {
  margin-right: 20rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
}
.listItem .item-head .img image {
  width: 100%;
}
.listItem .item-head .head-msg {
  line-height: 50rpx;
}
.listItem .item-head .head-msg image {
  margin-right: 20rpx;
  width: 60rpx;
}
.listItem .item-head .head-msg .name {
  margin-right: 20rpx;
  max-width: 240rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.listItem .item-head .head-msg .rank {
  border-radius: 40rpx;
  padding: 0 16rpx;
  background: #46d88c;
  color: #ffffff;
  font-size: 26rpx;
}
.listItem .item-head .head-msg .shop {
  border-radius: 40rpx;
  padding: 0 16rpx;
  background: #ffaf43;
  color: #ffffff;
  font-size: 26rpx;
}
.listItem .item-head .head-msg .numMark {
  margin-left: 20rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 40rpx;
  width: 40rpx;
  text-align: center;
  background: #f6f6f6;
  color: #999;
}
.listItem .item-head .operPost {
  position: relative;
  width: 80rpx;
  height: 80rpx;
}
.listItem .item-head .operPost .iconfont {
  position: absolute;
  top: 0;
  right: 0;
  color: #999;
}
.listItem .item-head .timer text {
  float: left;
  margin-right: 20rpx;
}
.listItem .item-head .timer .mark {
  font-size: 22rpx;
  border-radius: 30rpx;
  line-height: 32rpx;
  padding: 0 16rpx;
  border: 1px solid #b40000;
  color: #b40000;
  margin-top: 10rpx;
}
.listItem .followBox {
  height: 100rpx;
  padding-top: 5rpx;
}
.listItem .followBox .follow {
  width: 100rpx;
  text-align: center;
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
  border: 1px solid #bfbfbf;
  font-size: 26rpx;
  border-radius: 0.2em;
  color: #999;
}
.listItem .followBox .follow.active {
  color: #fff;
  background: #b40000;
  border-color: #b40000;
}
.listItem .articalBox {
  margin: 20rpx 30rpx 0;
}
.listItem .articalBox .msg {
  text-align: justify;
  word-break: break-all;
}
.listItem .articalBox .msg text {
  display: inline;
}
.listItem .articalBox .msg .name {
  margin-right: 10rpx;
}
.listItem .articalBox .msg .from {
  margin-left: 10rpx;
}
.listItem .articalBox .a_pic {
  width: 160rpx;
  margin-right: 20rpx;
}
.listItem .articalBox .a_main {
  text-align: justify;
  width: 70%;
}
.listItem .articalBox .a_main .msg {
  margin-top: 4rpx;
}
.listItem .articalBox .lookPic {
  display: inline-block;
  margin-left: 20rpx;
}
.listItem .articalBox .lookPic icon {
  margin-right: 10rpx;
}
.listItem .imgList {
  padding: 20rpx 20rpx 0;
}
.listItem .imgList .imgItem {
  float: left;
  width: 33.3333%;
  padding: 0 10rpx;
  height: calc((100vw - 24rpx) / 3 - 20rpx);
  overflow: hidden;
  margin-bottom: 20rpx;
}
.listItem .adventBox {
  background: #FEF6F6;
  margin: 20rpx 30rpx 0;
  min-height: 128rpx;
  padding: 16rpx 20rpx 16rpx 16rpx;
  box-sizing: border-box;
}
.listItem .adventBox .p_main {
  width: 150px;
  padding: 0 20rpx;
}
.listItem .adventBox .p_main text {
  display: block;
}
.listItem .adventBox .p_pic {
  width: 96rpx;
  height: 96rpx;
}
.listItem .adventBox .p_pic image {
  height: 96rpx;
}
.listItem .adventBox .p_pic.icon {
  width: 40rpx;
  margin: 0 20rpx;
  height: 40rpx;
  overflow: hidden;
  position: relative;
}
.listItem .adventBox .p_pic.icon image {
  position: absolute;
  top: 0;
  left: 0;
}
.listItem .adventBox .p_pic.icon image.pic1 {
  top: -54rpx;
}
.listItem .adventBox .p_pic.icon image.pic2 {
  top: -118rpx;
}
.listItem .adventBox .p_pic.icon image.pic3 {
  top: -182rpx;
}
.listItem .adventBox .p_pic.icon image.pic4 {
  top: -240rpx;
}
.listItem .itemOperBox {
  text-align: center;
  font-size: rpx;
  color: #999;
  padding-top: 20rpx;
}
.listItem .itemOperBox button {
  line-height: 1.2;
}
.listItem .itemOperBox.red {
  color: #B40000;
}
.listItem .itemOperBox .iconfont {
  margin-right: 10rpx;
  font-size: 40rpx;
  position: relative;
  top: 4rpx;
}
.listItem .adventPicBox .adventPic {
  margin: 20rpx 0;
}
.listItem .adventPicBox .addventBtn {
  margin: 20rpx 0;
}


.productContent {
  padding: 0 10rpx;
}
.productContent .item {
  float: left;
  width: 50%;
  padding: 0 10px;
  margin-bottom: 20rpx;
}
.productContent .item .item-box {
  border-radius: 0.3em;
  overflow: hidden;
  -webkit-box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
          box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
}
.productContent .item .pic {
  width: 100%;
  height: calc((100vw - 20rpx) / 2 - 20px);
  overflow: hidden;
}
.productContent .item .name {
  margin: 20rpx 10rpx;
  text-align: justify;
}
.productContent .item .mark {
  display: inline-block;
  padding: 0 8rpx;
  border: 1px solid #b40000;
  border-radius: 14rpx;
  margin-left: 10rpx;
}
.productContent .item .price {
  padding: 0 10rpx 20rpx;
}


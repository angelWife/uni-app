.modalBody {
  height: 100%;
}
.rewardModal {
  background: #fff;
  bottom: 0;
  -webkit-transform: bottom 0.3s easy;
          transform: bottom 0.3s easy;
  padding-bottom: 60rpx;
}
.rewardModal .title {
  height: 80rpx;
  line-height: 80rpx;
}
.rewardModal .title text {
  display: inline-block;
  padding: 0 20rpx;
}
.rewardModal .title .active {
  font-size: 32rpx;
  color: #b40000;
}
.rewardModal .giftList {
  padding: 10rpx;
  overflow: hidden;
}
.rewardModal .giftList .item {
  padding: 10rpx;
  width: 25%;
  float: left;
}
.rewardModal .giftList .item .box {
  height: calc((100vw - 20rpx) / 4 - 20rpx);
  border-radius: 0.5em;
  background: #eee;
  border: 1px solid #eee;
}
.rewardModal .giftList .item .box .pic {
  padding: 0 20%;
}
.rewardModal .giftList .item .box .text {
  font-size: 20rpx;
  color: #999;
  padding: 10rpx 0;
  text-align: center;
}
.rewardModal .giftList .item .box .text > view {
  width: 50%;
  text-align: center;
}
.rewardModal .giftList .item .box.active {
  background: #fff;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
  border-color: #B40000;
}
.rewardModal .giftList .item .box.active .text {
  color: #B40000;
}
.rewardModal .modalfoot {
  height: 80rpx;
  padding: 0 20rpx 20rpx;
}
.rewardModal .modalfoot .text {
  margin-right: 30rpx;
}


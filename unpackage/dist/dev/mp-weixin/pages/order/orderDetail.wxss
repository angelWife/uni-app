.fs40 {
  font-size: 60rpx;
}
.content {
  padding: 0 0 100rpx;
}
.content .modal {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 0 30rpx;
}
.content .timer {
  line-height: 80rpx;
  text-align: center;
}
.content .item {
  border-bottom: 1px solid #ccc;
}
.content .shopMsg .pic {
  width: 60rpx;
  height: 60rpx;
  border-radius: 60rpx;
  overflow: hidden;
  margin-right: 20rpx;
}
.content .shopMsg .shopname {
  max-width: 50%;
  font-weight: 600;
}
.content .logist {
  padding: 20rpx 30rpx;
}
.content .logist .pic {
  width: 50rpx;
  margin-right: 20rpx;
}
.content .address {
  padding: 20rpx 30rpx;
}
.content .address .pic {
  width: 50rpx;
  margin-right: 20rpx;
}
.content .address .msg {
  width: 60%;
}
.content .address .msg .detail {
  margin-top: 10rpx;
}
.content .address .msg .name text {
  display: inline-block;
  margin-right: 20rpx;
}
.content .order_detail {
  padding: 10rpx 0;
  line-height: 60rpx;
}
.content .order_detail .shopName {
  padding: 10rpx 0;
}
.content .order_detail .product {
  margin: 10rpx 0;
}
.content .order_detail .product .pic {
  width: 180rpx;
  height: 180rpx;
  margin-right: 20rpx;
}
.content .order_detail .product .center {
  width: 50%;
}
.content .order_detail .product .spec {
  margin-top: 10rpx;
}
.content .order_detail .product .spec text {
  display: inline-block;
  background: #efefef;
  color: #999;
  padding: 4rpx 6rpx;
  font-size: 24rpx;
  margin-right: 20rpx;
}
.content .order_detail .price {
  padding-left: 20rpx;
}
.content .phoneCall {
  line-height: 80rpx;
  border: 0;
}
.content .phoneCall .pic {
  width: 40rpx;
  margin-right: 20rpx;
}
.content .orderMsg {
  padding: 20rpx 30rpx;
}
.content .orderMsg .item_c {
  line-height: 50rpx;
}
.content .footBtn {
  position: fixed;
  width: 100%;
  left: 0;
  bottom: 0;
  text-align: right;
  z-index: 4;
  padding-bottom: constant(safe-area-inset-bottom);
  background: #fff;
  padding-right: 30rpx;
  box-shadow: 0 1px 5px rgba(0, 0, 0, 0.2);
}
.content .footBtn button {
  line-height: 60rpx;
  display: inline-block;
  margin: 14rpx 0 14rpx 14rpx;
}


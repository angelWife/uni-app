.advent {
  height: 320rpx;
}
.item {
  padding: 20rpx 20rpx 0;
}
.pic {
  width: 200rpx;
  height: 200rpx;
  overflow: hidden;
  border-radius: 0.3em;
  position: relative;
}
.pic .shownum {
  position: absolute;
  background: #f6f6f6;
  text-align: center;
  height: 40rpx;
  width: 40rpx;
  font-size: 20rpx;
  line-height: 40rpx;
  border-radius: 0.4em;
  color: #999;
  left: 0;
  top: 0;
}
.pic .num0 {
  background: #B40000;
  color: #fff;
}
.pic .num1 {
  background: #ff9d19;
  color: #fff;
}
.pic .num2 {
  background: #4c8ff7;
  color: #fff;
}
.nums {
  padding: 10rpx 0;
}
.msg {
  width: 50%;
  margin-left: 20rpx;
}


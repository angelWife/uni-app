.advent {
  height: 320rpx;
}
.item {
  padding: 20rpx 20rpx 0;
}
.pic {
  width: 200rpx;
  height: 200rpx;
  overflow: hidden;
  border-radius: 0.3em;
  position: relative;
}
.pic .shownum {
  position: absolute;
  background: #efefef;
  text-align: center;
  height: 50rpx;
  width: 44rpx;
  font-size: 20rpx;
  line-height: 45rpx;
  border-radius: 8px 0px 20px 20px;
  color: #999;
  left: 0;
  top: 0;
}
.pic .num0 {
  background: -webkit-linear-gradient(top, #ffd555 0%, #ffa100 100%);
  background: linear-gradient(180deg, #ffd555 0%, #ffa100 100%);
  color: #fff;
}
.pic .num1 {
  background: -webkit-linear-gradient(top, #ecfaff 0%, #a6a7a8 100%);
  background: linear-gradient(180deg, #ecfaff 0%, #a6a7a8 100%);
  color: #fff;
}
.pic .num2 {
  background: -webkit-linear-gradient(top, #fbc884 0%, #d49e55 100%);
  background: linear-gradient(180deg, #fbc884 0%, #d49e55 100%);
  color: #fff;
}
.nums {
  padding: 10rpx 0;
}
.msg {
  width: 50%;
  margin-left: 20rpx;
}


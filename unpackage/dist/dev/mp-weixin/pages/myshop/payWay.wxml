<view class="content"><view class="price text-center red"><text>¥</text><text class="fs40">{{orderVO.pricePayTotal}}</text></view><block wx:if="{{show_time==1}}"><view class="fs16 text-center">支付剩余时间：<uni-count-down vue-id="1" show-day="{{false}}" color="{{color}}" splitorColor="{{color}}" show-style="{{false}}" fontSize="{{fontSize}}" hour="{{hour}}" minute="{{minute}}" second="{{second}}" bind:__l="__l"></uni-count-down></view></block><view class="pay"><view class="title">支付方式</view><block wx:for="{{orderVO.payMethodList}}" wx:for-item="item" wx:for-index="ind" wx:key="ind"><view class="item flex item-center"><view class="pic"></view><view class="text flex-1"><view>{{''+(item.type==2?'微信支付':'星票支付')+''}}</view><block wx:if="{{item.type==1}}"><view class="c999">{{'(账户余额'+item.total+"星票，本订单可用"+item.amount+'）'}}</view></block></view><view><block wx:if="{{item.type==2}}"><label class="radio"><radio checked="{{payway}}" color="#b40000" data-event-opts="{{[['change',[['choosePayway',['$event']]]]]}}" bindchange="__e"></radio><text></text></label></block><block wx:if="{{item.type==1}}"><switch checked="{{payOther}}" color="#B40000" data-event-opts="{{[['change',[['switchChange',['$0','$1'],['event','index']]]]]}}" bindchange="__e"></switch></block></view></view></block></view><view class="payBtn"><view data-event-opts="{{[['tap',[['payResult',['$event']]]]]}}" class="btn" bindtap="__e">立即支付</view></view><block wx:if="{{showPassModal}}"><view class="modalmask passwordModal flex f-col just-con-c"><view class="modalMain"><view class="title fs16">安全验证<icon data-event-opts="{{[['tap',[['closeModal',['$event']]]]]}}" class="iconfont icon-remove" bindtap="__e"></icon></view><view class="center text-center"><block wx:if="{{showPayPass}}"><block><view class="red"><text class="fs13">¥</text><text class="fs16">138.22</text></view><block><view class="text">请输入支付密码</view></block><block><view class="text">请设置支付密码</view></block></block></block><block wx:else><block><view class="text">短信验证码已发送到</view><view class="text">180****1214（59S）</view></block></block></view><view class="pwdBox"><view data-event-opts="{{[['tap',[['getFocus',['$event']]]]]}}" class="textBox" bindtap="__e"><block v:for="(item,ind) in pwdVO.myArr"><input disabled password="{{pwdVO.ispassword}}" data-event-opts="{{[['tap',[['Tap',['$event']]]]]}}" value="{{pwdVO.Value[ind]}}" catchtap="__e"/></block></view><input class="password-input" type="number" password="{{pwdVO.ispassword}}" maxlength="{{pwdVO.myArr.length}}" focus="{{pwdVO.isFocus}}" data-event-opts="{{[['input',[['password_input',['$event']]]]]}}" bindinput="__e"/></view></view></view></block></view>
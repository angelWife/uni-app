page {
  min-height: 100%;
  background: #efefef;
  padding-bottom: 100rpx;
}
.productPic {
  position: relative;
}
.productPic swiper {
  height: 100vw;
}
.productPic .page {
  position: absolute;
  padding: 10rpx 0;
  width: 100rpx;
  text-align: center;
  font-size: 24rpx;
  color: #fff;
  background: rgba(51, 51, 51, 0.3);
  right: 30rpx;
  bottom: 30rpx;
  border-radius: 22px;
}
.modal {
  background: #fff;
  padding: 24rpx;
  position: relative;
  margin-bottom: 20rpx;
}
.prod1 .name {
  margin-right: 180rpx;
}
.prod1 .price {
  margin-top: 10rpx;
  line-height: 60rpx;
}
.prod1 .yunfei {
  display: inline-block;
  position: relative;
  min-width: 140rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 40rpx;
  text-align: center;
  font-size: 24rpx;
  color: #fff;
  background: #fd7e77;
  margin-left: 20rpx;
  top: -4rpx;
}
.prod1 .iconfont {
  position: absolute !important;
  top: 24rpx;
  width: 140rpx;
  right: 0;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  color: #999;
  background: #efefef;
  border-top-left-radius: 50rpx;
  border-bottom-left-radius: 50rpx;
  overflow: hidden;
  border-top-right-radius: 0;
  border-bottom-right-radius: 0;
  padding: 0;
}
.prod1 .iconfont::before {
  margin-right: 10rpx;
  position: relative;
  top: 2rpx;
}
.prod1 .iconfont::after {
  border: 0;
  border-radius: none;
}
.prod2 {
  padding: 10rpx 24rpx;
  line-height: 40rpx;
}
.prod3 {
  padding: 20rpx 0 0;
  line-height: 50rpx;
}
.prod3 .name {
  padding: 0 24rpx;
}
.prod3 .listBox {
  overflow: hidden;
}
.prod3 .listBox .item {
  float: left;
  text-align: center;
  min-width: 180rpx;
  border-radius: 50rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
.prod3 .coupon .item {
  border: 1px solid #b40000;
  color: #b40000;
}
.prod3 .service .item {
  background: #efefef;
  color: #666;
}
.assemble {
  padding: 0;
}
.assemble .title {
  line-height: 80rpx;
  border-bottom: 1px solid #ccc;
  padding: 0 24rpx;
}
.assemble .item {
  padding: 20rpx 0;
  margin: 0 24rpx;
  border-bottom: 1px solid #ccc;
}
.assemble .item:last-child {
  border: 0;
}
.assemble .item .pic {
  width: 60rpx;
  height: 60rpx;
  margin-right: 24rpx;
  border-radius: 60rpx;
  overflow: hidden;
}
.assemble .item > .name {
  width: 30%;
  font-weight: 600;
  font-size: 30rpx;
}
.assemble .item .time .name {
  max-width: 200rpx;
  margin-right: 20rpx;
  font-weight: 600;
}
.assemble .item button {
  padding: 0 20rpx;
}
.prod4 .pic {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
  overflow: hidden;
  margin-right: 20rpx;
}
.prod4 .name {
  width: 50%;
  margin-right: 20rpx;
}
.prod5 {
  padding: 0;
}
.prod5 .title {
  padding: 20rpx 24rpx;
  border-bottom: 1px solid #ccc;
}
.prod5 .item {
  margin: 0 24rpx;
  padding: 20rpx;
  border-bottom: 1px solid #ccc;
}
.prod5 .item .item-top .pic {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}
.prod5 .item .item-top .name {
  width: 30%;
}
.prod5 .item .item-top .star image {
  width: 40rpx;
  display: inline-block;
  margin-left: 10rpx;
}
.prod5 .item .text {
  margin: 20rpx 0;
}
.prod5 .item .time text {
  display: inline-block;
  margin-right: 20rpx;
}
.productDetail {
  padding: 0;
}
.productDetail .title {
  padding: 20rpx 24rpx;
}
.productDetail .goodsAttr {
  padding: 10rpx 24rpx;
}
.productDetail .goodsAttr > .flex {
  line-height: 50rpx;
}
.productDetail .goodsAttr .name {
  width: 120rpx;
}
.productDetail .goodsAttr .value {
  width: 60%;
}
.productDetail .goodsMsg {
  overflow: hidden;
}
.productDetail .goodsMsg .text {
  text-align: justify;
  padding: 10rpx 24rpx;
}
.productDetail .goodsMsg .img {
  padding: 10rpx 0;
  text-align: center;
}
.productDetail .goodsMsg .img ._img {
  width: 100%;
}
.prodFoot {
  position: fixed;
  z-index: 5;
  width: 100%;
  height: 100rpx;
  left: 0;
  bottom: 0;
  background: #fff;
  -webkit-box-shadow: 0 -1px 5px rgba(0, 0, 0, 0.1);
          box-shadow: 0 -1px 5px rgba(0, 0, 0, 0.1);
}
.prodFoot .item {
  width: 100rpx;
  text-align: center;
  font-size: 24rpx;
  color: #999;
  position: relative;
}
.prodFoot .item button {
  border: 0;
  position: absolute;
  background: none;
  height: 100rpx;
  padding: 0;
  width: 100rpx;
  top: 0;
  left: 0;
}
.prodFoot .item button::after {
  border: none !important;
  -webkit-box-shadow: none !important;
          box-shadow: none !important;
}
.prodFoot .btn {
  color: #fff;
  height: 100rpx;
  text-align: center;
}
.prodFoot .btn .price {
  font-size: 32rpx;
}
.prodFoot .btn .text {
  font-size: 26rpx;
}
.prodFoot .btn1 {
  background: #b40000;
}
.prodFoot .btn2 {
  background: #FD7E77;
}
.comDialog {
  position: fixed;
  height: 100%;
  width: 100%;
  top: 0;
  left: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0.6);
}
.comDialog .moadl-main {
  width: 80%;
  background: #fff;
  border-radius: 0.6em;
}
.comDialog .moadl-main .title {
  line-height: 100rpx;
  text-align: center;
  position: relative;
  border-bottom: 1px solid #ccc;
}
.comDialog .moadl-main .title .iconfont {
  position: absolute;
  width: 100rpx;
  right: 0;
  top: 0;
  color: #999;
}
.comDialog .moadl-main .listBox {
  max-height: 600rpx;
  overflow: hidden;
  overflow-y: auto;
}


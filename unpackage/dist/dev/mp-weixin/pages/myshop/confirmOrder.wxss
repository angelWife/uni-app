page {
  min-height: 100%;
  background: #efefef;
}
.fs40 {
  font-size: 80rpx;
}
.content {
  padding: 0 24rpx 100rpx;
}
.content .modal {
  background: #fff;
  border-radius: 0.2em;
  margin-top: 20rpx;
}
.content .address {
  padding: 20rpx;
}
.content .address .pic {
  width: 60rpx;
  height: 60rpx;
  background: -webkit-gradient(linear, left top, left bottom, from(#db0b00), to(#fd5959));
  background: -o-linear-gradient(top, #db0b00 0%, #fd5959 100%);
  background: linear-gradient(180deg, #db0b00 0%, #fd5959 100%);
  border-radius: 50%;
  text-align: center;
  margin-right: 20rpx;
}
.content .address .pic .iconfont {
  line-height: 60rpx;
  width: 60rpx;
  color: #fff;
}
.content .address .msg {
  width: 60%;
}
.content .address .msg .detail {
  margin-top: 10rpx;
}
.content .address .msg .name text {
  display: inline-block;
  margin-right: 20rpx;
}
.content .address .chooseAddress .confont {
  color: #999;
  height: 60rpx;
  width: 60rpx;
  line-height: 60rpx;
  text-align: right;
}
.content .order_detail {
  padding: 10rpx 24rpx 20rpx;
}
.content .order_detail .shopName {
  padding: 10rpx 0;
}
.content .order_detail .product {
  margin: 10rpx 0;
}
.content .order_detail .product .pic {
  width: 180rpx;
  height: 180rpx;
  margin-right: 20rpx;
}
.content .order_detail .product .center {
  width: 50%;
}
.content .order_detail .product .spec {
  margin-top: 10rpx;
}
.content .order_detail .product .spec text {
  display: inline-block;
  background: #efefef;
  color: #999;
  padding: 4rpx 6rpx;
  font-size: 24rpx;
  margin-right: 20rpx;
}
.content .order_detail .price {
  padding-left: 20rpx;
}
.content .orderMsg .item {
  line-height: 40rpx;
  margin-top: 10rpx;
}
.content .texarea {
  padding: 24rpx;
}
.content .texarea .flex-1 {
  width: 60%;
}
.content .texarea .flex-1 textarea {
  height: 160rpx;
  width: 100%;
}
.content .footBtn {
  position: fixed;
  width: 100%;
  left: 0;
  bottom: 0;
  z-index: 4;
  line-height: 100rpx;
  padding-bottom: constant(safe-area-inset-bottom);
  background: #fff;
  padding-left: 24rpx;
  -webkit-box-shadow: 0 1px 5px rgba(0, 0, 0, 0.2);
          box-shadow: 0 1px 5px rgba(0, 0, 0, 0.2);
}
.content .footBtn .btn {
  color: #fff;
  background: #B40000;
  width: 30%;
  min-width: 160rpx;
  text-align: center;
}
.content .couponModal .modalMain {
  position: absolute;
  width: 100%;
  left: 0;
  bottom: 0;
  background: #fff;
  padding: 0 24rpx;
}
.content .couponModal .modalMain .title {
  line-height: 100rpx;
  text-align: center;
  position: relative;
  border-bottom: 1px solid #ccc;
}
.content .couponModal .modalMain .title .iconfont {
  position: absolute;
  width: 100rpx;
  right: 0;
  top: 0;
  color: #999;
}
.content .couponModal .modalMain .list {
  padding-top: 20rpx;
}
.content .couponModal .modalMain .list .item {
  background: #FFF4F1;
  border-radius: 0.3em;
  overflow: hidden;
  margin-bottom: 20rpx;
  padding: 10rpx 0;
}
.content .couponModal .modalMain .list .item .left {
  width: 150rpx;
  margin-right: 30rpx;
  text-align: center;
}
.content .couponModal .modalMain .list .item .right {
  width: 200rpx;
  text-align: center;
  line-height: 144rpx;
  border-left: 1px dashed #b40000;
}
.content .couponModal .foot {
  padding: 20rpx 0;
}


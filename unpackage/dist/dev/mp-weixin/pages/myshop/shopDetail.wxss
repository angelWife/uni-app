page,
.content {
  height: 100%;
  border: 0;
  background: #eee;
}
.shopHead {
  background: rgba(0, 0, 0, 0.2) url(http://www.mypcera.com/star/mm/uploadfile/201005/4/A142330696.jpg) center center no-repeat;
  border-bottom-left-radius: 1em;
  border-bottom-right-radius: 1em;
  overflow: hidden;
  background-size: 100% auto;
  color: #fff;
  padding: 0 20rpx 20rpx;
}
.shopHead .shopMsg .name {
  width: 60%;
  padding-top: 10rpx;
}
.shopHead .shopMsg .name .btn {
  text-align: center;
}
.shopHead .shopMsg .name .btn .contact {
  border: 1px solid #fff;
  color: #fff;
  background: none;
}
.shopHead .shopMsg .name .btn .contact::after {
  border: none;
  -webkit-box-shadow: none;
          box-shadow: none;
}
.shopHead .shopMsg button {
  width: 160rpx;
}
.shopHead .shopMsg .right {
  margin-left: 20rpx;
  text-align: center;
}
.shopHead .shopMsg .right .pic image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
}
.shopHead .shopMsg .right .btn {
  margin-top: 20rpx;
}
.shopHead .shopCoupon {
  margin-top: 20rpx;
  height: 100rpx;
  width: 100%;
}
.shopHead .shopCoupon scroll-view {
  white-space: nowrap;
  height: 100%;
  overflow: hidden;
}
.shopHead .shopCoupon scroll-view image {
  width: 100px;
  margin-right: 20rpx;
}
.shopNav {
  padding: 20rpx;
  overflow: hidden;
}
.shopNav .item {
  width: 25%;
  float: left;
  text-align: center;
}
.shopNav .item .name {
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
  border-bottom: 2px solid #eee;
}
.shopNav .item.active .name {
  border-color: #b40000;
  color: #b40000;
}


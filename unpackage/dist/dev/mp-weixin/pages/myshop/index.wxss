page {
  min-height: 100%;
}
.content {
  padding-top: 120rpx;
  border: 0;
}
.content .advent {
  margin-top: 10rpx;
}
.searchBox {
  padding: 20rpx 24rpx 20rpx;
  background: #eee;
  position: fixed;
  width: 100%;
  z-index: 10;
  left: 0;
  top: 0;
}
.searchBox .input {
  position: relative;
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  border-radius: 0.2em;
}
.searchBox .input input {
  width: 100%;
  padding: 0 60rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.searchBox .input .iconfont {
  position: absolute;
  top: 0;
  width: 60rpx;
  text-align: center;
  color: #999;
}
.searchBox .input .icon-clear {
  right: 0;
}
.searchBox .search {
  position: relative;
  margin-left: 24rpx;
}
.searchBox .search button {
  height: 80rpx;
  line-height: 80rpx;
}
.resBox {
  min-height: calc(100vh - 120rpx);
}
.resBox .title {
  padding: 20rpx;
  font-size: 30rpx;
  line-height: 60rpx;
}
.resBox .title icon {
  float: right;
  color: #999;
}
.resBox .histroy {
  margin-top: 10rpx;
}
.resBox .histroy .h_list {
  font-size: 26rpx;
}
.resBox .histroy .h_list .item {
  float: left;
  width: 50%;
  padding: 10rpx 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.resBox .histroy .h_list .item:nth-child(2n) {
  border-left: 1px solid #d6d6d6;
}
.resBox .hotSearch {
  margin-top: 10rpx;
}
.resBox .hotSearch .h_list {
  font-size: 24rpx;
  padding: 0 10rpx;
}
.resBox .hotSearch .h_list .item {
  float: left;
  background: #eeeeee;
  color: #999;
  line-height: 40rpx;
  padding: 0 10rpx;
  border-radius: 0.3em;
  margin: 10rpx;
}
.searchList {
  height: 100%;
  padding-top: 20rpx;
}
.listBox .title {
  font-size: 16px;
  font-weight: 600;
  color: #b40000;
  padding: 20rpx 24rpx;
}
.listBox .shopList {
  padding: 0 24rpx 20rpx;
}
.listBox .shopList .item {
  background: #fff;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
  border-radius: 40rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}
.listBox .shopList .item .shopMsg .pic {
  width: 60rpx;
  height: 60rpx;
  border-radius: 60rpx;
  overflow: hidden;
  margin-right: 20rpx;
}
.listBox .shopList .item .shopMsg .shopname {
  max-width: 50%;
  font-weight: 600;
}
.listBox .shopList .item .shopMsg text {
  border: 1px solid #999;
  font-size: 20rpx;
  padding: 0 6rpx;
  border-radius: 0.2em;
  margin-left: 10rpx;
  margin-top: 6rpx;
}
.listBox .shopList .item .shopMsg .text {
  margin-top: 4rpx;
  font-size: 26rpx;
}
.listBox .shopList .item scroll-view {
  width: 100%;
  margin-top: 20rpx;
  white-space: nowrap;
}
.listBox .shopList .item scroll-view .proItem {
  width: 200rpx;
  display: inline-block;
  margin-right: 10rpx;
}
.listBox .shopList .item scroll-view .proItem:last-child {
  margin-right: 0;
}
.listBox .shopList .item scroll-view .proItem .pic {
  width: 100%;
  height: 200rpx;
  overflow: hidden;
}
.listBox .shopList .item scroll-view .proItem .name {
  padding: 10rpx 0;
}
.listBox .shopList .item scroll-view .proItem .price .mark {
  position: relative;
  top: -4rpx;
  margin-left: 6rpx;
  font-size: 20rpx;
  padding: 0 6rpx;
  border-radius: 20rpx;
  border: 1px solid #b40000;
}


page {
  background: #eeeeee;
  min-height: 100%;
}
page .pd10 {
  padding: 10rpx 0;
}
.content {
  padding-bottom: 120rpx;
  position: relative;
}
.content .noData {
  position: absolute;
  height: auto;
  width: 100%;
  line-height: 40rpx;
  bottom: 110rpx;
  left: 0;
  text-align: center;
}
.detail {
  background: #fff;
  padding: 20rpx 24rpx;
  border-bottom: 1px solid #efefef;
}
.detail .item-head .img {
  margin-right: 20rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
}
.detail .item-head .img image {
  width: 100%;
}
.detail .item-head .head-msg {
  line-height: 50rpx;
}
.detail .item-head .head-msg image {
  margin-right: 20rpx;
  width: 60rpx;
}
.detail .item-head .head-msg .name {
  margin-right: 20rpx;
  max-width: 240rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.detail .item-head .head-msg .rank {
  border-radius: 40rpx;
  padding: 0 16rpx;
  background: #46d88c;
  color: #ffffff;
  font-size: 26rpx;
}
.detail .item-head .head-msg .shop {
  border-radius: 40rpx;
  padding: 0 16rpx;
  background: #ffaf43;
  color: #ffffff;
  font-size: 26rpx;
}
.detail .item-head .timer text {
  float: left;
  margin-right: 20rpx;
}
.detail .item-head .timer .mark {
  font-size: 22rpx;
  border-radius: 30rpx;
  line-height: 32rpx;
  padding: 0 16rpx;
  border: 1px solid #b40000;
  color: #b40000;
  margin-top: 10rpx;
}
.detail .followBox {
  height: 100rpx;
  padding-top: 5rpx;
}
.detail .followBox .follow {
  width: 100rpx;
  text-align: center;
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
  border: 1px solid #bfbfbf;
  font-size: 26rpx;
  border-radius: 0.2em;
  color: #999;
}
.detail .followBox .follow.active {
  color: #fff;
  background: #b40000;
  border-color: #b40000;
}
.detail .articalBox {
  margin: 20rpx auto 0;
}
.detail .articalBox .msg {
  text-align: justify;
  word-break: break-all;
  overflow: hidden;
}
.detail .articalBox .msg text {
  display: inline;
}
.detail .articalBox .msg .name {
  margin-right: 10rpx;
}
.detail .articalBox .msg .from {
  margin-left: 10rpx;
}
.detail .articalBox .msg ._p {
  margin: 5px 0;
  overflow: hidden;
}
.detail .articalBox .msg ._p ._img {
  width: 100% !important;
}
.detail .articalBox .a_pic {
  width: 160rpx;
  margin-right: 20rpx;
}
.detail .articalBox .a_main {
  text-align: justify;
  width: 70%;
}
.detail .articalBox .a_main .msg {
  margin-top: 4rpx;
}
.detail .articalBox .lookPic {
  display: inline-block;
  margin-left: 20rpx;
}
.detail .articalBox .lookPic icon {
  margin-right: 10rpx;
}
.detail .imgList {
  margin: 0 -10rpx;
  padding: 20rpx 0 0;
}
.detail .imgList .imgItem {
  float: left;
  width: 33.3333%;
  padding: 0 15rpx;
  height: calc((100vw - 24rpx) / 3 - 20rpx);
  overflow: hidden;
  margin-bottom: 20rpx;
}
.detail .adventBox {
  background: #FEF6F6;
  margin-top: 20rpx;
  height: 128rpx;
  padding: 16rpx 20rpx 16rpx 16rpx;
}
.detail .adventBox .p_main {
  width: 150px;
  padding: 0 20rpx;
}
.detail .adventBox .p_main text {
  display: block;
}
.detail .adventBox .p_pic {
  width: 96rpx;
  height: 96rpx;
}
.detail .adventBox .p_pic image {
  height: 96rpx;
}
.detail .adventBox .p_pic.icon {
  width: 40rpx;
  margin: 0 20rpx;
  height: 40rpx;
  overflow: hidden;
  position: relative;
}
.detail .adventBox .p_pic.icon image {
  position: absolute;
  top: 0;
  left: 0;
}
.detail .adventBox .p_pic.icon image.pic1 {
  top: -54rpx;
}
.detail .adventBox .p_pic.icon image.pic2 {
  top: -118rpx;
}
.detail .adventBox .p_pic.icon image.pic3 {
  top: -182rpx;
}
.detail .adventBox .p_pic.icon image.pic4 {
  top: -240rpx;
}
.detail .itemOperBox {
  text-align: center;
  line-height: 60rpx;
  font-size: 30rpx;
  color: #999;
}
.detail .itemOperBox .iconfont {
  margin-right: 10rpx;
  font-size: 40rpx;
  position: relative;
  top: 4rpx;
}
.detail .adventPicBox .adventPic {
  margin: 20rpx 0;
  position: relative;
}
.detail .adventPicBox .adventPic text {
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  color: #f1f1f1;
  font-size: 24rpx;
}
.detail .shareBox {
  line-height: 80rpx;
  padding: 10rpx 0;
}
.detail .shareBox .iconfont {
  width: 80rpx;
  height: 80rpx;
  text-align: center;
  border-radius: 80rpx;
  box-shadow: 0 1px 5px rgba(0, 0, 0, 0.2);
  background: #fff;
  margin-right: 20rpx;
  font-size: 40rpx;
}
.detail .readNums {
  margin-top: 20rpx;
}
.detail .operBox {
  padding: 20rpx 0 0;
  text-align: center;
  overflow: hidden;
  margin: 0 -10rpx;
}
.detail .operBox .item {
  float: left;
  width: 25%;
  padding: 0 10rpx;
  overflow: hidden;
}
.detail .operBox .item .mybtn {
  padding: 0 0 10rpx;
  line-height: 50rpx;
  border-radius: 50rpx;
  color: #999;
  background: #fff;
  border: 1px solid #9f9f9f;
}
.detail .operBox .item .mybtn.item_red {
  background: #b40000;
  border-color: #b40000;
  color: #fff;
}
.detail .operBox .item .iconfont {
  height: 40rpx;
  width: 40rpx;
  text-align: center;
  line-height: 40rpx;
}
.detail .operBox .item .iconfont::before {
  line-height: 100%;
}
.comment {
  background: #fff;
  margin-top: 20rpx;
}
.comment .title {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
}
.comment .commentList .noData {
  position: relative !important;
}
.comment .commentList .commentMain {
  width: 60%;
}
.comment .item {
  padding: 20rpx;
  border-top: 1px solid #e9e9e9;
}
.comment .item .pic {
  width: 80rpx;
  height: 80rpx;
  margin: 0 30rpx 0 20rpx;
}
.comment .item .pic .headPic {
  height: 100%;
  border-radius: 80rpx;
}
.comment .item .name {
  line-height: 40rpx;
}
.comment .item .name text {
  display: inline-block;
  margin-right: 20rpx;
}
.comment .item .follow {
  padding: 0 16rpx;
  border-radius: 40rpx;
  background: #46d88c;
  color: #ffffff;
  font-size: 26rpx;
}
.comment .item .msg {
  min-height: 60rpx;
  text-align: justify;
}
.comment .item .oper {
  line-height: 30rpx;
}
.comment .item .oper .iconfont {
  float: left;
}
.comment .item .oper text {
  float: left;
  margin-left: 10rpx;
}
.comment .item .operIocn {
  margin-left: 20rpx;
  color: #999;
}
.comment .item .operIocn .iconfont {
  position: relative;
  top: -6rpx;
}
.comment .item .operIocn text {
  position: relative;
  top: 8rpx;
}
.comment .item .hasUp .iconfont {
  color: #B40000;
}
.operFoot {
  position: fixed;
  z-index: 10;
  width: 100%;
  left: 0;
  bottom: 0;
  padding-bottom: env(safe-area-inset-bottom);
  box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.1);
  background: #fff;
}
.operFoot input {
  display: block;
  margin: 15rpx 20rpx;
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 20rpx;
  background: #eeeeee;
  border-radius: 70rpx;
}
.operFoot .oper {
  width: 80rpx;
  height: 100rpx;
  text-align: center;
  color: #999;
  position: relative;
}
.operFoot .oper text {
  font-size: 24rpx;
}
.operFoot .oper.shareBtn {
  line-height: 1.3;
  padding: 0;
}
.operFoot .oper.red {
  color: #d40000;
}
.operFoot .oper.red .iconfont {
  color: #d40000;
}
.operFoot .oper .mark {
  position: absolute;
  background: #B40000;
  font-size: 20rpx;
  width: 30rpx;
  height: 30rpx;
  border-radius: 30rpx;
  line-height: 30rpx;
  text-align: center;
  color: #fff;
  top: 10rpx;
  right: 0rpx;
}
.rewardListBox {
  position: fixed;
  top: 0;
  right: 0;
  z-index: 20;
}


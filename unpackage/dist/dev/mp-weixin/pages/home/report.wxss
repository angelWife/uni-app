page {
  background: #eeeeee;
  min-height: 100%;
}
.content {
  padding: 20rpx;
}
.content .modal {
  background: #fff;
  margin-bottom: 20rpx;
}
.content .modal .title {
  line-height: 60rpx;
  padding: 0 20rpx;
}
.content .modal .resonlist {
  padding: 0 10rpx 10rpx;
  overflow: hidden;
}
.content .modal .resonlist .item {
  width: 33.3333%;
  float: left;
  padding: 10rpx;
}
.content .modal .resonlist .item .item_box {
  heigth: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: #e6e6e6;
  color: #999;
  border-radius: 0.2em;
}
.content .modal .resonlist .item.choose .item_box {
  color: #fff;
  background-color: #b40000;
}
.content .modal .picList {
  padding: 10rpx;
  overflow: hidden;
}
.content .modal .picList .item {
  float: left;
  width: 25%;
  height: calc((100vw - 60rpx) / 4);
  line-height: calc((100vw - 60rpx) / 4);
  padding: 10rpx;
  position: relative;
  overflow: hidden;
}
.content .modal .picList .item icon {
  top: 10rpx;
  right: 10rpx;
}
.content .modal .picList .item image {
  height: 100%;
  vertical-align: top;
}
.content .modal .picList .item .loadpic {
  width: 100%;
  height: 100%;
  border: 1px dashed #e6e6e6;
  color: #999;
  text-align: center;
}
.content .modal .picList .item .loadpic .iconfont {
  font-size: 50rpx;
  color: #999;
}
.content .modal textarea {
  padding: 10rpx 20rpx 20rpx;
  height: 200rpx;
  width: 100%;
  word-break: break-all;
  box-sizing: border-box;
}
.content .btnBox {
  margin: 40rpx 0 20rpx;
}


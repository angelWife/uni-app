.content {
  padding: 0 20rpx 100rpx;
}
.content .textarea {
  margin-bottom: 20rpx;
}
.content .textarea textarea {
  padding: 20rpx 0;
  height: 160px;
  width: 100%;
  box-sizing: border-box;
}
.content .textarea .text-right {
  padding: 20rpx 0;
}
.content .textarea text {
  display: inline-block;
  margin-right: 20rpx;
}
.content .picList {
  overflow: hidden;
}
.content .picList .item {
  float: left;
  position: relative;
  width: calc(25% - 10rpx);
  height: calc((100vw - 20rpx) / 4 - 10rpx);
  margin: 0 10rpx 10rpx 0;
  overflow: hidden;
}
.content .upload {
  width: calc(25% - 10rpx);
  height: calc((100vw - 20rpx) / 4 - 10rpx);
  border: 1px dashed #d6d6d6;
  font-size: 50px;
  text-align: center;
  line-height: calc((100vw - 20rpx) / 5);
  color: #999;
}
.content .operBox {
  position: fixed;
  width: 100%;
  left: 0;
  bottom: 0;
  padding-bottom: constant(safe-area-inset-bottom);
  background: #eee;
}
.content .operBox .item {
  width: 20%;
  float: left;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #999;
  font-size: 40rpx;
}
.content .operBox .item .iconfont {
  font-size: 40rpx;
}
.content .linkBox {
  background: #eee;
  padding: 16rpx 20rpx 16rpx 16rpx;
  margin: 20rpx 0;
  min-height: 128rpx;
  position: relative;
  background: #FEF6F6;
  box-sizing: border-box;
}
.content .linkBox .pic {
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
}
.content .linkBox .msg {
  width: 50%;
  padding-right: 30rpx;
}
.content .linkBox .icon {
  width: 40rpx;
  margin: 0 20rpx;
  height: 40rpx;
  overflow: hidden;
  position: relative;
}
.content .linkBox .icon image {
  position: absolute;
  top: 0;
  left: 0;
}
.content .linkBox .icon image.pic1 {
  top: -54rpx;
}
.content .linkBox .icon image.pic2 {
  top: -118rpx;
}
.content .linkBox .icon image.pic3 {
  top: -182rpx;
}
.content .linkBox .icon image.pic4 {
  top: -240rpx;
}


<view class="content"><block wx:for="{{addrList}}" wx:for-item="item" wx:for-index="ind" wx:key="ind"><view class="item"><view class="top"><text class="fs15">{{item.name}}</text><text class="c999">{{item.phone}}</text></view><view class="center flex"><view class="text flex-1">{{''+item.areaProvince+item.areaCity+item.areaCounty+item.address+''}}</view><view class="btn"><button type="null" size="mini" data-event-opts="{{[['tap',[['chooseAddr',[ind]]]]]}}" bindtap="__e">使用</button></view></view><view class="foot flex item-center"><view class="flex-1"><label class="{{['radio',item.isDefault?'red':'c999']}}"><radio value="{{item.id}}" checked="{{item.flagDft}}" color="#B40000" data-event-opts="{{[['tap',[['changeDefault',[ind]]]]]}}" bindtap="__e"></radio>设为默认</label></view><view class="c999"><text data-event-opts="{{[['tap',[['editAddr',[ind]]]]]}}" class="c999" bindtap="__e">编辑</text><text data-event-opts="{{[['tap',[['setAddr',['$0','top'],[[['addrList','',ind,'id']]]]]]]}}" class="{{['c999',(item.flagTop)?'red':'']}}" bindtap="__e">置顶</text></view></view><icon data-event-opts="{{[['tap',[['deleteAddr',[ind]]]]]}}" class="iconfont icon-clear" bindtap="__e"></icon></view></block><view data-event-opts="{{[['tap',[['showModal',['$event']]]]]}}" class="addBtn" bindtap="__e"><icon class="iconfont icon-add"></icon>新增地址</view><block wx:if="{{showAddrModal}}"><view class="modalmask addAddr flex item-center just-con-c"><view class="modalmian"><view class="title">{{''+modalTitle+''}}<icon data-event-opts="{{[['tap',[['closeModal',['$event']]]]]}}" class="iconfont icon-remove" bindtap="__e"></icon></view><view class="modalCenter"><view class="flex border"><view class="flex-1 input border-right"><input type="text" placeholder="收货人姓名" data-event-opts="{{[['input',[['__set_model',['','name','$event',[]]]]]]}}" value="{{name}}" bindinput="__e"/></view><view class="flex-1 input"><input type="text" placeholder="联系电话" data-event-opts="{{[['input',[['__set_model',['','mobilePhone','$event',[]]]]]]}}" value="{{mobilePhone}}" bindinput="__e"/></view></view><view class="input border"><picker class="mypicker" mode="region" value="{{region}}" data-event-opts="{{[['change',[['bindAreaChange',['$event']]]]]}}" bindchange="__e"><view class="uni-input">{{region[0]+region[1]+region[2]}}</view></picker></view><view class="input border"><input type="text" placeholder="详细地址（如街道、小区、乡镇、村)" data-event-opts="{{[['input',[['__set_model',['','address','$event',[]]]]]]}}" value="{{address}}" bindinput="__e"/><view class="location"><icon class="iconfont icon-dizhi"></icon><view class="fs10">定位</view></view></view></view><view class="foot"><button type="red" data-event-opts="{{[['tap',[['save',['$event']]]]]}}" bindtap="__e">保存</button></view></view></view></block></view>
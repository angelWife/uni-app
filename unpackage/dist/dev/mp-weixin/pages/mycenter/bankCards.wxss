page {
  min-height: 100%;
  background: #efefef;
}
.content {
  padding: 24rpx 24rpx 80rpx;
}
.item {
  height: 200rpx;
  margin-bottom: 20rpx;
  border-radius: 0.3em;
  background: -webkit-linear-gradient(left, #FE8F65 0%, #FD5262 100%);
  background: linear-gradient(90deg, #FE8F65 0%, #FD5262 100%);
}
.item .pic {
  margin: 0 40rpx;
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background: #fff;
  border-radius: 100%;
  overflow: hidden;
}
.item .pic image {
  width: 60rpx;
}
.item .name {
  padding: 0 0 10rpx 0;
}
.item .hideMum {
  color: #fff;
  opacity: 0.5;
}
.item .carNum {
  margin: 0 40rpx 0 0;
}
.item .carNum text {
  display: inline-block;
  margin-left: 20rpx;
}
.addCard {
  background: #fff;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 0.3em;
  padding: 0 40rpx;
}
.addCard .icon-add {
  margin-right: 40rpx;
  color: #B40000;
}
.addCard .icon-right {
  font-size: 28rpx;
  color: #999;
}
.questions {
  position: fixed;
  width: 100%;
  bottom: 0;
  left: 0;
  text-align: center;
  font-size: 24rpx;
  line-height: 80rpx;
}


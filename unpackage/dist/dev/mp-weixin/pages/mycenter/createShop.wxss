.content {
  padding: 24rpx;
}
.formBox .input {
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  padding: 0 20rpx;
  display: block;
  margin-top: 20rpx;
}
.formBox textarea.input {
  padding: 20rpx;
  height: 200rpx;
  line-height: 1.2;
  width: 100%;
  box-sizing: border-box;
}
.uploadCard {
  background: #fff;
  margin-top: 20rpx;
  padding-bottom: 20rpx;
}
.uploadCard .title {
  padding: 20rpx;
}
.uploadCard .uploadBox {
  padding: 0 10rpx;
}
.uploadCard .uploadBox > view {
  margin: 0 10rpx;
  width: 50%;
}
.uploadCard .uploadBox .text {
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: #007AFF;
  color: #fff;
}
.price {
  margin-top: 10rpx;
}
.aggrement {
  margin: 10rpx 0;
  line-height: 40rpx;
}
.btnBox {
  margin: 10rpx 0;
}


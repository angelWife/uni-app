.content {
  min-height: 100vh;
  padding-bottom: 120rpx;
}
.footbtn {
  position: fixed;
  bottom: 0;
  z-index: 10;
  left: 0;
  width: 100%;
  padding: 20rpx 30rpx;
  background: #fff;
  box-shadow: 0 -1px 5px rgba(0, 0, 0, 0.1);
}
.item {
  margin: 0 30rpx;
  border-bottom: 1px solid #ccc;
  padding: 20rpx 0;
}
.item .pic {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
  overflow: hidden;
  margin-right: 20rpx;
}
.item .msg {
  padding: 10rpx 0;
}


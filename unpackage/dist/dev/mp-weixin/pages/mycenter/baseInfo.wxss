page {
  min-height: 100%;
  background: #efefef;
}
.modal {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 0 24rpx;
}
.modal .item {
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1px solid #ccc;
}
.modal .item .icon {
  width: 40rpx;
  margin: 0 24rpx;
}
.modal .item .pic {
  width: 80rpx !important;
  height: 80rpx;
  border-radius: 80rpx;
  overflow: hidden;
  border: 1px solid #f1f1f1;
}
.modal .item .pic image {
  vertical-align: top;
  height: 80rpx;
}
.modal .item .text {
  width: 60%;
  text-align: right;
  position: relative;
  padding-left: 60rpx;
}
.modal .item .text .mypicker {
  height: 100rpx;
  line-height: 100rpx;
}
.modal .item .pr60 {
  padding-right: 60rpx;
}
.modal .item .oper {
  width: 60rpx;
}
.modal .item .oper.abs_right {
  position: absolute;
  right: 0;
  top: 0;
}
.modal .item .oper .iconfont {
  width: 60rpx;
  text-align: center;
  height: 100rpx;
  color: #999;
}
.modal .item:last-child {
  border: 0;
}
.comModal {
  padding: 24rpx;
}
.comModal textarea {
  height: 240rpx;
  width: 100%;
  background: #f9f9f9;
  border: 1px solid #ccc;
  border-radius: 0.3em;
  box-sizing: border-box;
  padding: 20rpx;
}
.comModal .btnBox {
  margin-top: 24rpx;
}
.comModal .btnBox button {
  display: inline-block;
}


.content {
  border: 0;
  height: 100vh;
}
.picBox {
  background: -webkit-linear-gradient(top, #d1ad27 0%, #ffec73 100%);
  background: linear-gradient(180deg, #d1ad27 0%, #ffec73 100%);
  position: relative;
  text-align: center;
}
.picBox image {
  width: 60%;
}
.picBox .junxian {
  width: 150px;
  position: absolute;
  z-index: 5;
  left: 50%;
  top: 50%;
  margin-left: -75px;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.picBox text {
  position: absolute;
  right: 24rpx;
  bottom: 24rpx;
  color: #90741A;
}
.levelBox {
  background: #fff;
  padding: 0 24rpx;
}
.levelBox .item .name {
  margin-right: 60rpx;
  line-height: 100rpx;
  height: 100rpx;
}
.levelBox .item .dataBox {
  position: relative;
  height: 100rpx;
}
.levelBox .item .dataBox .markBox {
  position: absolute;
  top: 20rpx;
  text-align: center;
  z-index: 5;
}
.levelBox .item .dataBox .markBox text {
  display: inline-block;
}
.levelBox .item .dataBox .markBox .text {
  border: 1px solid #ccc;
  height: 20rpx;
  line-height: 20rpx;
  border-radius: 20rpx;
  padding: 0 10rpx;
  font-size: 20rpx;
  color: #999;
}
.levelBox .item .dataBox .markBox .sanjiao {
  position: absolute;
  left: 50%;
  margin-left: -6rpx;
  top: 36rpx;
  width: 0;
  height: 0;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  border-top: 8rpx solid #ccc;
}
.levelBox .item .dataBox .markBox .mark {
  width: 2px;
  background: #ccc;
  height: 16rpx;
  position: absolute;
  left: 50%;
  margin-left: -1px;
  top: 46rpx;
}
.levelBox .item .dataBox .prev {
  left: 10%;
}
.levelBox .item .dataBox .next {
  left: 80%;
}
.levelBox .item .dataBox .now {
  left: 30%;
  z-index: 3;
}
.levelBox .item .dataBox .now .text {
  background: #FFA820;
  border-color: #FFA820;
  color: #fff;
}
.levelBox .item .dataBox .now .sanjiao {
  border-top-color: #FFA820;
}
.levelBox .item .dataBox .now .mark {
  height: 20rpx;
  width: 20rpx;
  border-radius: 20rpx;
  background: #FFA820;
  top: 44rpx;
  margin-left: -10rpx;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
}
.levelBox .item .dataBox .line {
  height: 16rpx;
  border-radius: 16rpx;
  overflow: hidden;
  position: absolute;
  background: #efefef;
  width: 100%;
  bottom: 20rpx;
  left: 0;
}
.levelBox .item .dataBox .line .nowLine {
  position: absolute;
  width: 50%;
  height: 16rpx;
  border-radius: 16rpx;
  background: #FF9D19;
  left: 0;
  top: 0;
}
.levelMsg {
  height: 50%;
  padding: 0 24rpx;
  margin-top: 20rpx;
  background: #fff;
  overflow: hidden;
}
.levelMsg .item {
  padding: 20rpx 0;
  border-bottom: 1px solid #ccc;
}
.levelMsg .item > .flex-1 {
  width: 60%;
}
.levelMsg .item .btnBox {
  padding-left: 24rpx;
}
.levelMsg .item:last-child {
  border: 0;
}
.myscroll {
  height: calc(100% - 100rpx);
}


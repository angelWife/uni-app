.fs40 {
  font-size: 60rpx;
}
.content {
  padding-top: 80rpx;
  min-height: 100vh;
}
.tabBox {
  height: 80rpx;
  position: fixed;
  width: 100%;
  z-index: 10;
  top: 0;
  left: 0;
}
.tabBox .item {
  line-height: 80rpx;
  width: 50%;
  float: left;
  text-align: center;
  position: relative;
  font-size: 32rpx;
}
.tabBox .item .line {
  width: 0;
  height: 0;
}
.tabBox .item.active {
  color: #b40000;
  font-weight: 600;
}
.tabBox .item.active .line {
  position: absolute;
  height: 2px;
  width: 68rpx;
  bottom: 10rpx;
  left: 50%;
  margin-left: -34rpx;
  background: #b40000;
}
.conpont {
  padding: 10rpx 30rpx 0;
}
.conpont .item {
  background: #FFF4F1;
  border-radius: 0.3em;
  overflow: hidden;
  margin: 0 0 20rpx;
  padding: 10rpx 0;
}
.conpont .item .left {
  width: 220rpx;
  text-align: center;
}
.conpont .item .right {
  width: 160rpx;
  text-align: center;
  line-height: 144rpx;
  border-left: 1px dashed #b40000;
}
.conpont .item.hasReceived {
  background: #f1f1f1;
  color: #999 !important;
}
.conpont .item.hasReceived .right {
  border-color: #999;
}
.goods {
  background: #fff;
}
.goods .item {
  position: relative;
  height: 140rpx;
}
.goods .item .btn {
  height: 100%;
  width: 140rpx;
  text-align: center;
  line-height: 140rpx;
  color: #fff;
}
.goods .item .look {
  background: #4c8ff7;
}
.goods .item .delete {
  background: #b40000;
}
.goods .newBox {
  position: absolute;
  height: 140rpx;
  width: 100%;
  top: 0;
  left: 0;
  z-index: 2;
  background: #fff;
  -webkit-transition: left 0.3s ease;
  transition: left 0.3s ease;
  border-bottom: 1px solid #ccc;
}
.goods .newBox .pic {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 10rpx;
  margin: 0 40rpx;
  position: relative;
}
.goods .newBox .pic image {
  height: 100%;
}
.goods .newBox .pic text {
  position: absolute;
  color: #fff;
  font-size: 20rpx;
  background: #FA5151;
  border-radius: 50%;
  z-index: 4;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  min-width: 32rpx;
  border-radius: 32rpx;
  top: -8rpx;
  right: -16rpx;
}
.goods .newBox .main {
  height: 140rpx;
  padding: 24rpx 0;
}
.goods .newBox .main .text {
  margin-top: 10rpx;
}


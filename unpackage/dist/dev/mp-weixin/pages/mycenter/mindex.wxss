page {
  height: 100%;
}
.content {
  border: 0;
  height: 100%;
}
.headBox {
  background: #810d21;
  padding: 20rpx 0;
  color: #fff;
  font-size: 26rpx;
}
.headBox .pic {
  position: relative;
  height: 100rpx;
  width: 100rpx;
  margin: 0 20rpx;
}
.headBox .pic .headpic {
  border-radius: 100rpx;
  width: 100rpx;
}
.headBox .pic .grade {
  position: absolute;
  width: 120rpx;
  top: -10rpx;
  left: -10rpx;
}
.headBox .msg {
  width: 50%;
}
.headBox .msg .text {
  padding: 10rpx 0;
}
.headBox .msg .btn {
  margin-top: 10rpx;
}
.headBox .msg .btn text {
  display: inline-block;
  padding: 0 20rpx;
  border-radius: 60rpx;
  border: 1px solid #fff;
  margin: 0 10rpx;
}
.headBox .offical {
  width: 160rpx;
  margin: 0 20rpx;
}
.mydatas {
  height: 100rpx;
}
.mydatas .item {
  width: 25%;
  background: #d83d52;
  text-align: center;
}
.mydatas .item:nth-child(2n) {
  background: #e55266;
}
.mydatas .item .num {
  color: #fff;
}
.mydatas .item .text {
  color: #f2a8b2;
  font-size: 24rpx;
}
.infoTab {
  background: #fff;
  height: 80rpx;
}
.infoTab .item {
  float: left;
  color: #999;
  border-bottom: 2px solid #fff;
  padding: 0 10rpx;
  margin: 0 20rpx;
  height: 80rpx;
  line-height: 100rpx;
}
.infoTab .item.active {
  border-color: #b40000;
  color: #b40000;
}
.myscroll {
  height: calc(100% - 360rpx);
}


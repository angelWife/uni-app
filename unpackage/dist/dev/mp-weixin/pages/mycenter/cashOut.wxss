page {
  min-height: 100%;
  background: #efefef;
}
.model {
  background: #fff;
  padding: 0 24rpx;
  margin-bottom: 20rpx;
}
.model .title {
  line-height: 80rpx;
}
.model .input {
  padding: 10rpx 0 20rpx;
}
.model .input input {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 60rpx;
}
.model .text {
  padding: 10rpx 0;
  border-top: 1px solid #ccc;
}

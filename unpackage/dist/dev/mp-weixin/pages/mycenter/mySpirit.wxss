.desc {
  padding: 20rpx 30rpx;
}
.desc .pic {
  width: 300rpx;
  margin-left: 20rpx;
}
.desc .detail {
  line-height: 50rpx;
}
.desc .detail .item {
  float: left;
  width: 50%;
}
.swiperBox {
  margin: 24rpx 30rpx;
  height: calc(100vw - 48rpx);
}
.swiperBox swiper {
  height: 100%;
}
.otherSpirit {
  padding: 0 14rpx;
}
.otherSpirit .item {
  float: left;
  width: 160rpx;
  margin: 0 10rpx 20rpx;
}
.otherSpirit .item .pic {
  width: 100%;
  height: 160rpx;
  overflow: hidden;
  border: 1px solid #ccc;
  box-shadow: 0 0 3px rgba(0, 0, 0, 0.2);
}
.otherSpirit .item.active .pic {
  border-color: #B40000;
}
.otherSpirit .item .text {
  line-height: 60rpx;
  text-align: center;
}
.otherSpirit .add {
  height: 160rpx;
  box-sizing: border-box;
  line-height: 160rpx;
  text-align: center;
  border: 1px dashed #ccc;
  border-radius: 0.2em;
  color: #999;
}
.otherSpirit .add .iconfont {
  -webkit-transform: rotate(45deg);
          transform: rotate(45deg);
  font-size: 48rpx;
}
.footbtn {
  padding: 20rpx 30rpx;
}


page {
  height: 100%;
}
.myscroll {
  padding-top: 20rpx;
}
.content {
  border: 0;
  height: 100%;
}
.headBox {
  padding: 20rpx 0;
  height: 230rpx;
  color: #fff;
  font-size: 26rpx;
}
.headBox .pic {
  position: relative;
  height: 100rpx;
  width: 100rpx;
  margin: 0 20rpx;
}
.headBox .pic .headpic {
  border-radius: 100rpx;
  width: 100rpx;
  height: 100rpx;
}
.headBox .pic .grade {
  position: absolute;
  width: 120rpx;
  top: -10rpx;
  left: -10rpx;
}
.headBox .msg {
  width: 50%;
}
.headBox .msg .text {
  line-height: 40rpx;
}
.headBox .msg .iconfont {
  float: left;
  height: 40rpx;
  width: 40rpx;
  text-align: center;
  line-height: 40rpx;
  overflow: hidden;
  position: relative;
}
.headBox .msg .iconfont::before {
  position: absolute;
  line-height: 40rpx;
  top: 0;
  left: 0;
}
.headBox .msg .btn {
  margin-top: 10rpx;
}
.headBox .msg .btn text {
  display: inline-block;
  padding: 0 20rpx;
  border-radius: 60rpx;
  border: 1px solid #fff;
  margin: 0 10rpx;
}
.headBox .offical {
  width: 160rpx;
  margin: 0 20rpx;
}
.mydatas {
  height: 100rpx;
}
.mydatas .item {
  width: 25%;
  background: #d83d52;
  text-align: center;
}
.mydatas .item:nth-child(2n) {
  background: #e55266;
}
.mydatas .item .num {
  color: #fff;
}
.mydatas .item .text {
  color: #f2a8b2;
  font-size: 24rpx;
}
.infoTab {
  background: #fff;
  height: 80rpx;
}
.infoTab .item {
  float: left;
  color: #999;
  border-bottom: 2px solid #fff;
  padding: 0 10rpx;
  margin: 0 20rpx;
  height: 80rpx;
  line-height: 100rpx;
}
.infoTab .item.active {
  border-color: #b40000;
  color: #b40000;
}
.myscroll {
  height: calc(100% - 430rpx);
}
.myscroll .topMsg {
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #ccc;
}
.myscroll .comItem .main {
  padding: 10rpx 0;
}
.myscroll .honor {
  padding: 0 10rpx;
}
.myscroll .honor .item {
  float: left;
  width: 50%;
  padding: 0 10px;
  margin: 10rpx 0;
}
.myscroll .honor .item .itemBox {
  background: #fff;
  border-radius: 0.5em;
  box-shadow: 0 0 3px rgba(0, 0, 0, 0.1);
  height: calc((100vw - 20rpx) / 2 - 20rpx);
  position: relative;
}
.myscroll .honor .item .mydate {
  position: absolute;
  top: 0;
  left: -10rpx;
  width: 120rpx;
  text-align: center;
  color: #fff;
  line-height: 40rpx;
}
.myscroll .honor .item .mydate image {
  position: absolute;
  top: 0;
  left: 0;
}
.myscroll .honor .item .item-modal {
  text-align: center;
  width: 80%;
}


page {
  min-height: 100%;
  background: #efefef;
}
.modal {
  background: #fff;
  margin-top: 20rpx;
}
.listBox {
  padding: 0 30rpx;
}
.listBox .item {
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #ccc;
}
.listBox .item:last-child {
  border: 0;
}
.listBox .item image {
  position: relative;
  top: -2rpx;
  width: 40rpx;
  display: inline-block;
  margin-right: 20rpx;
}
.listBox .item .iconfont {
  color: #999;
  font-size: 28rpx;
  margin-left: 20rpx;
}
.navBox {
  padding: 20rpx 0;
}
.navBox .item {
  text-align: center;
}
.navBox .item text {
  display: inline-block;
  padding: 10rpx 0;
  border-bottom: 2px solid #fff;
}
.navBox .item.active text {
  color: #b40000;
  border-color: #b40000;
}
.productContent {
  padding: 20rpx 10rpx 0;
  height: calc(100vh - 300rpx);
}
.productContent .item {
  float: left;
  width: 50%;
  padding: 0 10rpx;
  margin-bottom: 20rpx;
}
.productContent .item .item-box {
  border-radius: 0.3em;
  width: 100%;
  overflow: hidden;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
}
.productContent .item .pic {
  width: 100%;
  height: auto;
  overflow: hidden;
}
.productContent .item .prd_msg {
  padding: 0 20rpx 20rpx;
}
.productContent .item .name {
  margin: 10rpx 0;
  text-align: justify;
}
.productContent .item .mark {
  position: relative;
  top: -2rpx;
  display: inline-block;
  padding: 0 8rpx;
  border: 1px solid #b40000;
  border-radius: 14rpx;
  margin-left: 10rpx;
}
.productContent .item .price {
  padding: 0 0 10rpx;
}


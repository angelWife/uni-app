.content {
  padding: 0 20rpx 100rpx;
}
.content .textarea {
  margin-bottom: 20rpx;
}
.content .textarea textarea {
  padding: 20rpx 0;
  height: 160px;
}
.content .textarea .text-right {
  padding: 20rpx 0;
}
.content .textarea text {
  display: inline-block;
  margin-right: 20rpx;
}
.content .picList {
  overflow: hidden;
}
.content .picList .item {
  float: left;
  position: relative;
  width: calc(25% - 10rpx);
  height: calc((100vw - 20rpx) / 4 - 10rpx);
  margin: 0 10rpx 10rpx 0;
  overflow: hidden;
}
.content .upload {
  width: calc(25% - 10rpx);
  height: calc((100vw - 20rpx) / 4 - 10rpx);
  border: 1px dashed #d6d6d6;
  font-size: 50px;
  text-align: center;
  line-height: calc((100vw - 20rpx) / 5);
}
.content .operBox {
  position: fixed;
  width: 100%;
  left: 0;
  bottom: 0;
  height: 100rpx;
  padding-bottom: constant(safe-area-inset-bottom);
  background: #eee;
}
.content .operBox .item {
  width: 20%;
  float: left;
  line-height: 100rpx;
  text-align: center;
  color: #999;
  font-size: 40rpx;
}
.content .operBox .item .iconfont {
  font-size: 40rpx;
}
.content .linkBox {
  background: #eee;
  padding: 5px;
  margin: 20rpx 0;
  position: relative;
}
.content .linkBox .pic {
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
}
.content .linkBox .msg {
  width: 50%;
  padding-right: 30rpx;
}


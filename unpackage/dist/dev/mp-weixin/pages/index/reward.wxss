page,
.content {
  height: 100%;
}
.info {
  height: 240rpx;
  border-bottom-left-radius: 1em;
  border-bottom-right-radius: 1em;
  overflow: hidden;
  background: url('http://img.taopic.com/uploads/allimg/120925/235089-12092500254595.jpg') center center no-repeat;
  background-color: rgba(0, 0, 0, 0.3);
  background-size: 100% auto;
  text-align: center;
  position: relative;
}
.info .mark {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.3);
}
.info .pic image {
  width: 100rpx;
  border-radius: 100rpx;
}
.info .text {
  margin-top: 10rpx;
  color: #fff;
}
.rewardList {
  height: calc(100% - 320rpx);
}
.rewardList .title {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
}
.rewardList scroll-view {
  height: calc(100% - 80rpx);
}
.rewardList .item {
  height: 100rpx;
  line-height: 100rpx;
}
.rewardList .item .pic {
  height: 60rpx;
  width: 60rpx;
  line-height: 60rpx;
  margin: 10rpx 20rpx;
  border-radius: 60rpx;
  overflow: hidden;
}
.rewardList .item .name,
.rewardList .item .msg {
  border-top: 1px solid #efefef;
  padding-right: 20rpx;
}
.rewardBtn {
  background: #b40000;
  color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}
.rewardModal {
  bottom: -100%;
  -webkit-transform: bottom 0.3s easy;
      -ms-transform: bottom 0.3s easy;
          transform: bottom 0.3s easy;
}
.rewardModal.showModal {
  bottom: 0;
}
.rewardModal .title {
  height: 80rpx;
  line-height: 80rpx;
}
.rewardModal .title text {
  display: inline-block;
  padding: 0 20rpx;
}
.rewardModal .title .active {
  font-size: 32rpx;
  color: #b40000;
}
.rewardModal .giftList {
  padding: 10rpx;
  overflow: hidden;
}
.rewardModal .giftList .item {
  padding: 10rpx;
  width: 25%;
  float: left;
}
.rewardModal .giftList .item .box {
  height: calc((100vw - 20rpx) / 4 - 20rpx);
  border-radius: 0.5em;
  background: #eee;
}
.rewardModal .giftList .item .box .pic {
  padding: 20rpx 20% 0;
}
.rewardModal .giftList .item .box .text {
  font-size: 20rpx;
  color: #999;
  padding: 10rpx 0;
}
.rewardModal .giftList .item .box .text > view {
  width: 50%;
  text-align: center;
}
.rewardModal .modalfoot {
  height: 80rpx;
  padding: 0 20rpx;
}
.rewardModal .modalfoot .text {
  margin-right: 30rpx;
}


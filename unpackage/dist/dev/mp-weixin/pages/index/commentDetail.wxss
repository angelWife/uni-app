page {
  background: #eeeeee;
  min-height: 100%;
}
page .pd10 {
  padding: 10rpx 0;
}
.content {
  padding-bottom: 100rpx;
}
.detail {
  background: #fff;
  padding: 20rpx 24rpx;
  border-bottom: 1px solid #efefef;
}
.detail .item-head .img {
  margin-right: 20rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
  overflow: hidden;
}
.detail .item-head .img image {
  width: 100%;
}
.detail .item-head .head-msg {
  line-height: 50rpx;
}
.detail .item-head .head-msg text {
  float: left;
  margin-right: 20rpx;
}
.detail .item-head .head-msg .name {
  max-width: 240rpx;
  white-space: nowrap;
  overflow: hidden;
  -o-text-overflow: ellipsis;
     text-overflow: ellipsis;
}
.detail .item-head .head-msg .rank {
  border-radius: 40rpx;
  padding: 0 16rpx;
  background: #46d88c;
  color: #ffffff;
  font-size: 26rpx;
}
.detail .item-head .head-msg .shop {
  border-radius: 40rpx;
  padding: 0 16rpx;
  background: #ffaf43;
  color: #ffffff;
  font-size: 26rpx;
}
.detail .item-head .timer text {
  float: left;
  margin-right: 20rpx;
}
.detail .item-head .timer .mark {
  font-size: 22rpx;
  border-radius: 30rpx;
  line-height: 32rpx;
  padding: 0 16rpx;
  border: 1px solid #b40000;
  color: #b40000;
  margin-top: 10rpx;
}
.detail .followBox {
  height: 100rpx;
  padding-top: 5rpx;
}
.detail .followBox .follow {
  width: 100rpx;
  text-align: center;
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
  border: 1px solid #bfbfbf;
  font-size: 26rpx;
  border-radius: 0.2em;
  color: #999;
}
.detail .followBox .follow.active {
  color: #fff;
  background: #b40000;
  border-color: #b40000;
}
.detail .articalBox {
  margin: 20rpx auto;
}
.detail .articalBox .msg text {
  display: inline;
}
.detail .articalBox .msg .name {
  margin-right: 10rpx;
}
.detail .articalBox .msg .from {
  margin-left: 10rpx;
}
.detail .articalBox .a_pic {
  width: 160rpx;
  margin-right: 20rpx;
}
.detail .articalBox .a_main {
  text-align: justify;
  width: 70%;
}
.detail .articalBox .a_main .msg {
  margin-top: 4rpx;
}
.detail .articalBox .lookPic {
  display: inline-block;
  margin-left: 20rpx;
}
.detail .articalBox .lookPic icon {
  margin-right: 10rpx;
}
.detail .imgList {
  margin: 0 -10rpx;
}
.detail .imgList .imgItem {
  float: left;
  width: 30.55%;
  margin: 0 10rpx 20rpx;
  background: #f1f1f1;
}
.detail .imgList .imgItem image {
  width: 100%;
}
.detail .adventBox {
  background: #efefef;
  margin-bottom: 20rpx;
  padding: 16rpx 20rpx 16rpx 16rpx;
}
.detail .adventBox .p_main {
  width: 150px;
  padding: 0 20rpx;
}
.detail .adventBox .p_main text {
  display: block;
}
.detail .adventBox .p_pic {
  width: 80rpx;
}
.detail .itemOperBox {
  text-align: center;
  line-height: 60rpx;
  font-size: 30rpx;
  color: #999;
}
.detail .itemOperBox .iconfont {
  margin-right: 10rpx;
  font-size: 40rpx;
  position: relative;
  top: 4rpx;
}
.detail .adventPicBox .adventPic {
  margin: 20rpx 0;
  position: relative;
}
.detail .adventPicBox .adventPic text {
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  color: #f1f1f1;
  font-size: 24rpx;
}
.detail .shareBox {
  line-height: 80rpx;
  padding: 10rpx 0;
}
.detail .shareBox .iconfont {
  width: 80rpx;
  height: 80rpx;
  text-align: center;
  border-radius: 80rpx;
  -webkit-box-shadow: 0 1px 5px rgba(0, 0, 0, 0.2);
          box-shadow: 0 1px 5px rgba(0, 0, 0, 0.2);
  background: #fff;
  margin-right: 20rpx;
  font-size: 40rpx;
}
.detail .operBox {
  padding: 20rpx 0;
  text-align: center;
}
.detail .operBox .item {
  display: inline-block;
  padding: 0 30rpx 10rpx;
  line-height: 50rpx;
  border-radius: 50rpx;
  overflow: hidden;
  margin: 0 4%;
  color: #999;
  border: 1px solid #9f9f9f;
}
.detail .operBox .item .iconfont {
  height: 40rpx;
  width: 40rpx;
  text-align: center;
  line-height: 40rpx;
}
.detail .operBox .item .iconfont::before {
  line-height: 100%;
}
.detail .operBox .item_red {
  background: #b40000;
  border-color: #b40000;
  color: #fff;
}
.comment {
  background: #fff;
  margin-top: 20rpx;
}
.comment .title {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
}
.comment .item {
  padding: 20rpx;
  border-top: 1px solid #e9e9e9;
}
.comment .item .pic {
  width: 80rpx;
  margin-right: 20rpx;
}
.comment .item .name {
  line-height: 40rpx;
}
.comment .item .name text {
  display: inline-block;
  margin-right: 20rpx;
}
.comment .item .follow {
  padding: 0 16rpx;
  border-radius: 40rpx;
  background: #46d88c;
  color: #ffffff;
  font-size: 26rpx;
}
.comment .item .msg {
  min-height: 60rpx;
}
.comment .item .oper {
  line-height: 30rpx;
}
.comment .item .operIocn {
  margin-left: 20rpx;
  color: #999;
}
.comment .item .operIocn .iconfont {
  position: relative;
  top: -6rpx;
}
.comment .item .operIocn text {
  position: relative;
  top: -6rpx;
}
.operFoot {
  position: fixed;
  z-index: 10;
  width: 100%;
  height: 100rpx;
  left: 0;
  bottom: 0;
  padding-bottom: env(safe-area-inset-bottom);
  -webkit-box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.2);
          box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.2);
  background: #fff;
}
.operFoot input {
  display: block;
  margin: 15rpx 20rpx;
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 20rpx;
  background: #eeeeee;
  border-radius: 70rpx;
}
.operFoot .oper {
  width: 120rpx;
  text-align: center;
  color: #999;
}
.operFoot .oper text {
  font-size: 24rpx;
}

